<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.mitcoe.ishanjoshi.depressionanalyser.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ImageButtonStartRecording"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_mic_black_48dp" />

        <ImageButton
            android:id="@+id/ImageButtonStopRecording"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_stop_black_48dp" />

        <ImageButton
            android:id="@+id/ImageButtonStartPlaying"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_play_circle_filled_black_48dp" />

        <ImageButton
            android:id="@+id/ImageButtonStopPlaying"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_pause_circle_filled_black_48dp" />
    </LinearLayout>


</LinearLayout>
